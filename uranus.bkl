toolsets = vs2012;


program main {
	win32-subsystem = windows;
	win32-unicode = true;
	libs += d2d1;

	sources {
		src/win/u3d_platform.cpp
		src/win/u3d_render.cpp
		
		src/u3d_array.c
		src/u3d_camera.c
		src/u3d_context.c
		src/u3d_list.c
		src/u3d_init.c
		src/u3d_matrix.c
		src/u3d_new.c
		src/u3d_utils.c
		src/u3d_vector.c
		src/u3d_object.c
	}
}

program test {
	win32-subsystem = console;
	win32-unicode = false;
	
	sources {
		test/test.c
	}
}
